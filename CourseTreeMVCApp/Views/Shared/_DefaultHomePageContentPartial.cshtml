@using CourseTreeMVCApp.Entities
@model IEnumerable<CourseTreeMVCApp.Entities.Category>

@* Hero Section *@

<div class="hero section">
    <img class="img-fluid" src="~/Images/HeroImage.jpeg" />
    <div class="hero-heading">
        <h2 class="hero-heading-text">Learn Software Engineering at <strong>CourseTree</strong> </h2>
        <a id="HeroRegisterButton" class="btn btn-outline-info btn-lg text-light hero-register-button">Register</a>
    </div>
</div>

<hr class="section-divider"/>

@* Courses Section *@
<div class="courses section">
    <h3 class="section-header">Courses</h3>
    @*
    So let's say we want to display four cards displayed per row.
    Each card denotes a course.If we have 8 categories then 4 cards will be displayed on first row and next 4 cards on the 2nd row.
    So we need to calculate how many cards we are going to display to the user in the courses section.
    *@

    @{
        var count = Model.Count() / 4;
        var catList = new List<Category>();
    }

    @for(int i = 0; i <= count; i++)
    {
        catList = Model.Skip(i * 4).Take(4).ToList();

        <div class="row mt-3">
            @foreach(Category item in catList)
            {
               <div class="col-md-3">
                    <a href="#" class="text-dark">
                        <div class="card">
                            <img class="img-thumbnail" src="@item.ThumbnailImagePath" alt="@item.Title" />
                            <div class="card-body">
                                <h5 class="card-title">@item.Title</h5>
                                <p class="card-text">@item.Description</p>
                            </div>
                        </div>
                    </a>
               </div>
            }
        </div>

    }


</div>

<hr class="section-divider" />
@* Contact Section *@

<div class="contact-us section">
    <h3 class="col-md-5 section-header">Contact Us</h3>
    <div class="col-md-5">
        Email us for any questions or inquires or call 123-456-789.We would be happy to answer your questions.
    </div>
    <div class="mt-3">
        <div class="col-md-8">
            <form>
                <input type="hidden" />
                <div class="form-group">
                    <label for="Name" class="control-label">Name: </label>
                    <input id="Name" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="Email" class="control-label">Email: </label>
                    <input id="Email" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="Subject" class="control-label">Subject: </label>
                    <input id="Subject" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="MessageBody" class="control-label">Message: </label>
                    <textarea id="Messagebody" cols="30" rows="10" class="form-control"></textarea>

                </div>
                <div class="form-group d-flex mt-1">
                    <input type="button" value="Send Email" class="btn btn-outline-info ml-auto" />
                </div>
            </form>
        </div>
    </div>
</div>

<hr class="section-divider" />

